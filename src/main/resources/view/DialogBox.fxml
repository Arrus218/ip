<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.Pane?>
<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Pane HBox.hgrow="ALWAYS" />
        <Label fx:id="dialog" text="Label" wrapText="true" minHeight="-Infinity"
               style="-fx-font-size: 13;
               -fx-text-fill: #5D4037;
               -fx-background-color: #ffffffaa;
               -fx-background-radius: 10;
               -fx-padding: 8;
               -fx-font-family: 'Comic Sans MS';"/>
        <ImageView fx:id="displayPicture" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="false" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
